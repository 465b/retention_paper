file = {:home/ls/Documents/paper/phd/general/fenvs-11-1084888.pdf:pdf},
issn = {2296665X},
journal = {Frontiers in Environmental Science},
keywords = {estuarine ecosystem,phytoplankton,spatio-temporal variation,species characteristics,the Pearl river estuary},
number = {January},
