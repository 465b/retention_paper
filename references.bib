keywords = {Bacteria,Estuaries,Maximum turbidity zone,Phytoplankton,Primary production,Production},
number = {2-3},
pages = {151--171},
title = {{Bacterial and phytoplankton production in the maximum turbidity zone of three European estuaries: The Elbe, Westerschelde and Gironde}},
