file = {:home/ls/Documents/paper/phd/general/fmars-08-623714.pdf:pdf},
journal = {Frontiers in Marine Science},
keywords = {estuarine management,eutrophication,frontiers in marine science,frontiersin,org,oxygen depletion,oxygen depletion, eutrophication, tidal pumping, s,stratification,tidal pumping,www},
number = {June},
title = {{Seasonal Stratification and Biogeochemical Turnover in the Freshwater Reach of a Partially Mixed Dredged Estuary}},
