keywords = {Dark survival,Growth,Light limitation,Ocean mixing,PAM fluorometry,Phytoplankton physiology,Re-illumination},
number = {4},
pages = {591--603},
publisher = {Springer Netherlands},
title = {{The effect of constant darkness and short light periods on the survival and physiological fitness of two phytoplankton species and their growth potential after re-illumination}},
volume = {51},
year = {2017}
}
